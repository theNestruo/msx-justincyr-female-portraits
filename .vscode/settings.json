{
	"files.associations": {
		"*.makefile": "makefile",
		"makefile.*": "makefile"
	},
	"files.exclude": {
		"~tmppre.*": true,
		"**/*.zx0": { "when": "$(basename)" },
	},
	"[java]": {
		"editor.insertSpaces": false,
		"editor.tabSize": 4,
		"editor.rulers": [ 120 ],
	},
	"z80-asm-meter.platform": "msx",
	"[z80-macroasm]": {
		"editor.insertSpaces": false,
		"editor.tabSize": 8,
		"editor.rulers": [ 80 ],
	},
}
